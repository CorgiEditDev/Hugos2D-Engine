<Window x:Class="Graphical_User_Interface.NewProject"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Graphical_User_Interface"
        mc:Ignorable="d"
        Title="Create new Project" Height="450" Width="800">
    <Grid Background="#292929">
        <StackPanel Margin="298,0,0,0">
            <!--All propeties-->
            <TextBox  TextWrapping="Wrap" Text="Project"/>
            <ComboBox >
                <ComboBoxItem Content="Top - down"/>
                <ComboBoxItem Content="Sidescrolling platformer"/>
                <ComboBoxItem Content="Custom"/>
            </ComboBox>
        </StackPanel>
        <StackPanel Margin="0,0,507,0">
            <!--Propety names-->
            <TextBlock Foreground="White" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Text="Name : "/>
            <TextBlock Foreground="White" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Text="Type : "/>
        </StackPanel>
        <Button Click="createBtn_Click" BorderThickness="0" x:Name="createBtn" Content="Create" Height="27" Width="57" Margin="10,397,733,10"/>
    </Grid>
</Window>
